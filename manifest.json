{
  "manifest_version": 2,
  "name": "Scroll Highlight",
  "version": "0.1",
  "description": "Chrome scroll position highlight bar",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "options.html"
  },
  "author": "Tyler Johnson",
  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["highlight.js"],
    "all_frames": true  
  }]
}
